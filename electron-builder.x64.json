{
  "extends": "electron-builder.base.json",
  "extraResources": [
    {
      "from": "packages/renderer/dist/assets",
      "to": "assets",
      "filter": ["**/*"]
    },
    { "from": "vendor/headless-arm64", "to": "headless-arm64" },
    { "from": "vendor/headless-x64", "to": "headless-x64" }
  ],
  "mac": {
    "category": "public.app-category.video",
    "target": [
      { "target": "dmg", "arch": ["x64"] },
      { "target": "zip", "arch": ["x64"] }
    ],
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "entitlements.mac.plist",
    "identity": "JONG UK LEE (26WR9SJHBZ)",
    "notarize": true,
    "fileAssociations": [
      {
        "ext": ["mp4", "mkv", "mov", "webm", "avi"],
        "name": "Video File",
        "role": "Viewer",
        "rank": "Alternate"
      }
    ]
  }
}
