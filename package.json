{
  "name": "translator-electron-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --parallel --filter @app/* build",
    "dev": "bun run --filter @app/main dev",
    "start": "bun run --filter @app/main start",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "lint:fix": "eslint . --ext .ts,.tsx,.js --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss}\"",
    "clean": "bunx rimraf dist release"
  },
  "devDependencies": {
    "typescript": "^5.8.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.6",
    "@types/node": "^20.11.0",
    "ts-node": "^10.9.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0"
  }
}
