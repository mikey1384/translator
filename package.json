{
  "name": "translator-electron-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --parallel --filter @app/* build",
    "dev": "bun run --filter @app/main dev",
    "start": "bun run --filter @app/main start",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "lint:fix": "eslint . --ext .ts,.tsx,.js --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss}\"",
    "clean": "bunx rimraf dist release"
  },
  "devDependencies": {
    "@emotion/css": "^11.13.5",
    "@types/i18next": "^13.0.0",
    "@types/lodash": "^4.17.16",
    "@types/node": "^20.11.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/react-i18next": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "i18next": "^25.0.2",
    "i18next-browser-languagedetector": "^8.1.0",
    "lodash": "^4.17.21",
    "prettier": "^3.2.5",
    "react-i18next": "^15.5.1",
    "react-intersection-observer": "^9.16.0",
    "rimraf": "^5.0.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "electron-store": "^10.0.1",
    "node-machine-id": "^1.1.12",
    "openai": "^4.96.2",
    "webrtcvad": "^1.0.1"
  }
}
