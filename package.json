{
  "name": "translator-electron",
  "version": "1.0.0",
  "description": "Electron-based subtitle and translation tool",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist/* && tsc -p tsconfig.main.json && webpack --config webpack.preload.cjs && bun build ./src/renderer/index.tsx --outdir ./dist/renderer --target browser --no-typecheck && cp index.html dist/renderer/",
    "start": "electron dist/main.js --no-sandbox",
    "dev": "concurrently -n main,preload,renderer,electron       \"tsc -p tsconfig.main.json --watch\"       \"webpack --config webpack.preload.cjs --watch\"       \"bun build ./src/renderer/index.tsx --outdir ./dist/renderer --target browser --no-typecheck --watch && cp index.html dist/renderer/\"       \"wait-on dist/main.js && electron dist/main.js --no-sandbox\"",
    "package": "npm run build && electron-builder build",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss}\"",
    "check-types": "tsc --noEmit"
  },
  "build": {
    "appId": "com.translator.electron",
    "productName": "Translator",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/fonts",
        "to": "fonts",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "node_modules/keytar/**/*",
      "node_modules/youtube-dl-exec/**/*",
      "node_modules/@ffmpeg-installer/**/*",
      "node_modules/@ffprobe-installer/**/*",
      "node_modules/execa/**/*",
      "node_modules/electron-log/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.inherit.plist",
      "gatekeeperAssess": false,
      "notarize": true
    },
    "afterSign": "electron-notarize.cjs",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "assets/icon.png"
    }
  },
  "keywords": [
    "subtitles",
    "translation",
    "electron",
    "ffmpeg"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@electron/notarize": "^3.0.1",
    "@jest/globals": "^29.7.0",
    "@types/bun": "latest",
    "@types/electron-is-dev": "^1.1.3",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.13.10",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "electron": "^35.0.0",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^3.0.1",
    "electron-rebuild": "^3.2.9",
    "electron-reloader": "^1.2.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.2.6",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "wait-on": "^8.0.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@emotion/css": "^11.13.5",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@mui/material": "^5.15.20",
    "@types/path-browserify": "^1.0.3",
    "@types/uuid": "^10.0.0",
    "axios": "^1.8.2",
    "dotenv": "^16.4.7",
    "electron-context-menu": "^4.0.5",
    "electron-log": "^5.3.2",
    "electron-store": "^10.0.1",
    "execa": "^9.3.0",
    "form-data": "^4.0.2",
    "keytar": "^7.9.0",
    "node-fetch": "^2.7.0",
    "node-machine-id": "^1.1.12",
    "openai": "^4.86.2",
    "path-browserify": "^1.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-intersection-observer": "^9.16.0",
    "uuid": "^11.1.0",
    "youtube-dl-exec": "^3.0.20"
  },
  "trustedDependencies": [
    "@ffmpeg-installer/darwin-arm64",
    "@ffprobe-installer/darwin-arm64",
    "electron",
    "keytar",
    "youtube-dl-exec"
  ]
}
