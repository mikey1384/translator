{
  "name": "translator-electron-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n main,renderer,preload,electron -c blue,green,magenta,cyan \"bun run --filter @app/main dev\" \"bun run --filter @app/renderer dev\" \"bun run --filter @app/preload dev\" \"bunx electron packages/main\"",
    "build": "bun run --filter @app/* build",
    "start": "bun run build && bunx electron packages/main",
    "clean": "bunx rimraf packages/*/dist release",
    "clean:deep": "bunx rimraf node_modules bun.lockb && bun install",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "lint:fix": "eslint . --ext .ts,.tsx,.js --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss}\"",
    "postinstall": "if [ \"$CI\" = \"true\" ]; then bunx electron-rebuild -w webrtcvad -f; fi"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@emotion/css": "^11.13.5",
    "@types/bun": "^1.2.11",
    "@types/i18next": "^13.0.0",
    "@types/lodash": "^4.17.16",
    "@types/node": "^20.11.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/react-i18next": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "i18next": "^25.0.2",
    "i18next-browser-languagedetector": "^8.1.0",
    "lodash": "^4.17.21",
    "prettier": "^3.2.5",
    "react-i18next": "^15.5.1",
    "react-intersection-observer": "^9.16.0",
    "rimraf": "^5.0.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@types/which": "^3.0.4"
  },
  "trustedDependencies": [
    "@ffmpeg-installer/darwin-arm64",
    "@ffmpeg-installer/ffmpeg",
    "@ffprobe-installer/darwin-arm64",
    "@ffprobe-installer/ffprobe",
    "electron",
    "keytar",
    "puppeteer",
    "webrtcvad"
  ]
}
