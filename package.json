{
  "name": "translator-electron",
  "version": "1.0.0",
  "description": "Electron-based subtitle and translation tool",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "bun run build && electron .",
    "dev": "concurrently \"bun run --watch build-main\" \"bun run --watch bundle-renderer\" \"electron-dev\"",
    "electron-dev": "wait-on dist/main/index.js dist/renderer/index.js && electron .",
    "build-main": "bun build ./src/main/index.ts --outdir ./dist/main --target node",
    "build": "bun run build-main && bun run bundle-renderer",
    "bundle-renderer": "bun build ./src/renderer/index.tsx --outdir ./dist/renderer --target browser",
    "package": "bun run build && electron-builder build --mac --win --linux",
    "package:mac": "bun run build && electron-builder build --mac",
    "package:win": "bun run build && electron-builder build --win",
    "package:linux": "bun run build && electron-builder build --linux",
    "test": "jest"
  },
  "build": {
    "appId": "com.translator.electron",
    "productName": "Translator",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  },
  "keywords": [
    "subtitles",
    "translation",
    "electron",
    "ffmpeg"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@jest/globals": "^29.7.0",
    "@types/bun": "latest",
    "@types/electron-is-dev": "^1.1.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "concurrently": "^9.1.2",
    "electron": "^35.0.0",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.3.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "wait-on": "^8.0.2"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@emotion/css": "^11.13.5",
    "@emotion/react": "^11.14.0",
    "axios": "^1.8.2",
    "dotenv": "^16.4.7",
    "openai": "^4.86.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
