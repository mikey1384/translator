{
  "name": "translator-electron",
  "version": "1.0.0",
  "description": "Electron-based subtitle and translation tool",
  "main": "main.cjs",
  "scripts": {
    "start": "electron main.cjs --no-sandbox",
    "build": "tsc -p tsconfig.main.json && npx webpack --config webpack.preload.js && bun run build:renderer && cp index.html dist/renderer/",
    "clean": "rm -rf dist/*",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "npx webpack --config webpack.preload.js",
    "build:renderer": "bun build ./src/renderer/index.tsx --outdir ./dist/renderer --target browser --no-typecheck --define 'process.env.NODE_ENV:\"production\"' && cp index.html dist/renderer/",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "watch:preload": "webpack --config webpack.preload.js --watch",
    "watch:renderer": "concurrently -n bun,copy \"bun build ./src/renderer/index.tsx --outdir ./dist/renderer --target browser --no-typecheck --watch\" \"chokidar 'index.html' -c 'cp index.html dist/renderer/'\"",
    "restart:electron": "nodemon --watch dist --ext js --exec \"electron main.cjs --no-sandbox --enable-logging\"",
    "dev": "ELECTRON_ENABLE_LOGGING=true concurrently -n main,preload,renderer,electron \"bun run watch:main\" \"bun run watch:preload\" \"bun run watch:renderer\" \"wait-on dist/main.js dist/preload/index.js dist/renderer/index.js && bun run restart:electron\"",
    "dev:clean": "bun run clean && bun run build && bun run dev",
    "rebuild:main": "bun run build:main && (pkill -f 'electron main.cjs' || true) && bun run start",
    "package": "bun run build && electron-builder build --mac --win --linux",
    "lint": "bunx eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "bunx eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "bunx prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss}\"",
    "check-types": "bunx tsc --noEmit",
    "check-unused": "bunx eslint src --ext .ts,.tsx --rule 'unused-imports/no-unused-vars: error' --quiet"
  },
  "build": {
    "appId": "com.translator.electron",
    "productName": "Translator",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/fonts",
        "to": "fonts",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  },
  "keywords": [
    "subtitles",
    "translation",
    "electron",
    "ffmpeg"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@jest/globals": "^29.7.0",
    "@types/bun": "latest",
    "@types/electron-is-dev": "^1.1.3",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "electron": "^35.0.0",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.3.2",
    "electron-reloader": "^1.2.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "wait-on": "^8.0.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@emotion/css": "^11.13.5",
    "@emotion/react": "^11.14.0",
    "@types/path-browserify": "^1.0.3",
    "@types/uuid": "^10.0.0",
    "axios": "^1.8.2",
    "dotenv": "^16.4.7",
    "form-data": "^4.0.2",
    "keytar": "^7.9.0",
    "node-fetch": "^2.7.0",
    "openai": "^4.86.2",
    "path-browserify": "^1.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "uuid": "^11.1.0",
    "youtube-dl-exec": "^3.0.20"
  },
  "trustedDependencies": [
    "@ffmpeg-installer/darwin-arm64",
    "@ffprobe-installer/darwin-arm64",
    "electron",
    "keytar",
    "youtube-dl-exec"
  ]
}
