{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true
  },
  "include": [
    "src/main.ts",
    "src/services/**/*",
    "src/types/**/*",
    "src/handlers/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/renderer/**/*",
    "src/preload/**/*",
    "handlers"
  ]
}
