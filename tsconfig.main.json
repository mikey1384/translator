{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["src/main.ts", "src/services/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist", "src/renderer/**/*", "src/preload/**/*"]
}
