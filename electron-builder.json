{
  "appId": "tools.stage5.translator",
  "productName": "Translator",
  "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}",
  "directories": {
    "app": ".",
    "output": "dist"
  },
  "asar": true,
  "asarUnpack": ["node_modules/webrtcvad/**", "node_modules/keytar/**"],
  "npmRebuild": false,
  "buildDependenciesFromSource": false,
  "extraResources": [
    {
      "from": "packages/renderer/dist/assets",
      "to": "assets",
      "filter": ["**/*"]
    }
  ],
  "files": [
    "packages/main/dist/**/*",
    "packages/renderer/dist/**/*",
    "index.js",
    "package.json",
    "packages/main/package.json",
    "node_modules/**/*"
  ],
  "mac": {
    "category": "public.app-category.video",
    "target": ["dmg", "zip"],
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "entitlements.mac.plist",
    "identity": "JONG UK LEE (26WR9SJHBZ)",
    "notarize": {
      "teamId": "26WR9SJHBZ"
    },
    "fileAssociations": [
      {
        "ext": ["mp4", "mkv", "mov", "webm", "avi"],
        "name": "Video File",
        "role": "Viewer",
        "rank": "Alternate"
      }
    ]
  },
  "win": {
    "target": ["nsis"],
    "fileAssociations": [
      {
        "ext": ["mp4", "mkv", "mov", "webm", "avi"],
        "name": "Video File",
        "description": "Video file opened with Translator",
        "icon": "build/file_icon.ico"
      }
    ]
  },
  "nsis": {
    "perMachine": true
  }
}
