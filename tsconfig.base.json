{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "jsx": "react-jsx"
  },
  "include": ["packages/**/*.ts", "packages/**/*.tsx"],
  "exclude": ["**/dist/**", "**/node_modules/**"]
}
